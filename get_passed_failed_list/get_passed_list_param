#!/bin/bash

folder="/root/workspace.docker_branch/TestSuite-Konnektor-T-Systems/TestFallSteuerung/Protokollierung/"

index=1
passed=0
failed=0
tests=$(grep -r "Verdict fÃ¼r den Gesamt-Testfall: PASSED" "$folder" | grep ".txt"| cut -d '/' -f 8) 
echo $tests>tests.txt
version=$(cat tests.txt | cut -d ' ' -f 3 | grep -oh "._._._b[0-9]*")
filename=$(date)_v_$version"_$1.log"

if [ "$1" = "PASSED" ]
then
	while read p; do
	  index=$(( $index + 1 ))
	  value=${p}
	  cat tests.txt | grep "$value" &>/dev/null
	  if [ $? -ne 0 ];then
             #echo "" &>/dev/null
             :
	  else
             echo "$index   $value   PASSED"
	     echo "$index   $value   PASSED">>"$filename"
	     passed=$(( $passed + 1 ))
	  fi
	done < tf_list
fi

if [ "$1" = "FAILED" ]
then
	while read p; do
	  index=$(( $index + 1 ))
	  value=${p}
	  cat tests.txt | grep "$value" &>/dev/null
	  if [ $? -ne 0 ];then
	     echo "$index   $value   FAILED">>"$filename"
	     failed=$(( $failed + 1 ))
	  fi
	done < tf_list
fi


if [ "$1" = "" ]
then
	while read p; do
	  index=$(( $index + 1 ))
	  value=${p}
	  cat tests.txt | grep "$value" &>/dev/null
	  if [ $? -ne 0 ];then
	     echo "$index   $value   FAILED">>"$filename"
	     failed=$(( $failed + 1 ))
	  else
	     echo "$index   $value   PASSED">>"$filename"
	     passed=$(( $passed + 1 ))
	  fi
	done < tf_list
fi

echo ""
echo ""
if [ "$1" = "PASSED" ];then
	echo "PASSED:  $passed"
fi
echo ""
if [ "$1" = "FAILED" ];then
	echo "FAILED:  $failed"
fi
if [ "$1" = "" ];then
	echo "PASSED:  $passed"
	echo "FAILED:  $failed"
fi
echo ""

if [ "$1" = "PASSED" -o "$1" = "FAILED" -o "$1" = "" ];then
	echo "Eingabe $1  ist richtig" &>/dev/null
else
	echo "Eingabe $1  ist FALSCH"
fi

echo "$1"

